package com.itsme.springBootTutor.topic;

import java.util.Arrays;
import java.util.List;
import org.springframework.stereotype.Service;

@Service
public class TopicService {

	private List<Topic> topics = Arrays.asList(new Topic("Spring", "Spring Framework", "Spring Framework description"),
			new Topic("Java", "Java core", "Java Core description"),
			new Topic("Adv Java", "JAva Advance", "Advance Java description"));

	public List<Topic> getAllTopics() {
		return topics;
	}

	public Topic getTopic(String id) {
		topics.stream().filter(t -> t.getId().equals(id));
		return null;
	}
}
